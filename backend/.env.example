# Core server configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=development

# JWT settings (required)
JWT_SECRET=change-me-to-a-long-random-string
JWT_EXPIRES_IN=7d

# Encryption key used for storing third-party secrets (required)
# Must be at least 32 characters
ENCRYPTION_KEY=replace-with-32-char-secret-min

# Frontend origin for CORS and password reset links
FRONTEND_URL=http://localhost:5173

# Database connection
DATABASE_URL=file:./dev.db

# SMTP settings for transactional email (optional but recommended)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=secret
SMTP_SECURE=false
EMAIL_FROM="WarmWelcome.ai <no-reply@example.com>"

# Shopify integration (optional)
SHOPIFY_API_KEY=
SHOPIFY_API_SECRET=
SHOPIFY_REDIRECT_URI=http://localhost:5000/api/shopify/callback
SHOPIFY_SCOPES=read_customers,write_customers
SHOPIFY_STATE_SECRET=

# Seed user overrides (optional, for development only)
SEED_USER_EMAIL=demo@warmwelcome.ai
SEED_USER_PASSWORD=WarmWelcome123!
SEED_USER_FIRST_NAME=Demo
SEED_USER_LAST_NAME=User
