# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/warmwelcome?schema=public"

# JWT Secret (Change this to a secure random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OpenAI API (for later use)
OPENAI_API_KEY=your-openai-api-key

# Email Service (for later use)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@warmwelcome.ai

# Shopify (for later use)
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_SCOPES=read_customers,read_orders,write_orders

# Redis (for later use)
REDIS_URL=redis://localhost:6379
