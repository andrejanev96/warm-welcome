{
  "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "backend/dev.db"
    ]
  },
  "javascript": {
    "globals": ["console"]
  },
  "overrides": [
    {
      "include": ["backend/**/*.js"],
      "javascript": {
        "globals": [
          "require",
          "module",
          "process",
          "__dirname",
          "__filename",
          "fetch",
          "setTimeout",
          "setInterval",
          "clearTimeout",
          "clearInterval"
        ]
      }
    },
    {
      "include": ["frontend/**/*.{js,jsx}"],
      "javascript": {
        "globals": [
          "window",
          "document",
          "navigator",
          "localStorage",
          "sessionStorage"
        ]
      }
    }
  ]
}
